    </style>
    
    <style name="Text.Home.Destination.Button" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
