    <style name="Text.Home.Title" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>
    
    <style name="Text.Home.Destination.Title" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_main_title</item>
        <item name="android:textColor">@color/white</item>
